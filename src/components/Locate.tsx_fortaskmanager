const getPersistentUniqueId = async () => {
  let uniqueId = await SecureStore.getItemAsync('device-unique-id');
  
  if (!uniqueId) {
    uniqueId = uuidv4(); // æ–°ã—ã„UUIDã‚’ç”Ÿæˆ
    await SecureStore.setItemAsync('device-unique-id', uniqueId);
  }

  console.info('uniqueId:', uniqueId);
  return uniqueId;
};

const Locate = (props: Props): JSX.Element => {
  const [isLocating, setIsLocating] = useState(props.isLocating);
  const [location, setLocation] = useState<LocationType | null>(null);
  const [errorMsg, setErrorMsg] = useState<string | null>(null);
  const [count, setCount] = useState(0);
  const [exeTime, setExeTime] = useState(0);
  const timer = useRef<NodeJS.Timeout | null>(null);

  console.log('isLocating:', isLocating);

  const handleLocate = async () => {
    console.log('handleLocate');
    setCount(0);

    if (!isLocating) {

      // TODO è¨ˆæ¸¬ç”¨
      console.log('1');

      try {
        // ON ã«ã™ã‚‹
        await toggleBackgroundLocation(true);

        // 1ç§’ã”ã¨ã« elapsedTime ã‚’å¢—ã‚„ã™
        timer.current = setInterval(() => {
          setExeTime((prev) => prev + 1);
        }, 1000);

      } catch (error: any) {
        setErrorMsg(error.message);
        Alert.alert(error.message);
      }
    } else {
      // OFF ã«ã™ã‚‹
      await toggleBackgroundLocation(false);

      // è¨ˆæ¸¬çµ‚äº†æ™‚ã«ã‚¿ã‚¤ãƒãƒ¼ã‚’ã‚¯ãƒªã‚¢
      if (timer.current) {
        clearInterval(timer.current);
        timer.current = null;
      }
    }

    // TODO è¨ˆæ¸¬ç”¨
    console.log('2');

    setIsLocating((prev) => !prev);
  };

  // ğŸ“Œ ä½ç½®æƒ…å ±ã® ON / OFF ã‚’åˆ‡ã‚Šæ›¿ãˆã‚‹é–¢æ•°
  const toggleBackgroundLocation = async (enable: boolean) => {
    if (enable) {
      const { status: foreStatus } = await Location.requestForegroundPermissionsAsync();
      const { status: backStatus } = await Location.requestBackgroundPermissionsAsync();
      if (foreStatus !== 'granted' || backStatus !== 'granted') {
        setErrorMsg('ä½ç½®æƒ…å ±ã®å–å¾—ãŒè¨±å¯ã•ã‚Œã¦ã„ã¾ã›ã‚“');
        return;
      }

      await Location.startLocationUpdatesAsync(LOCATION_TASK_NAME, {
        accuracy: Location.Accuracy.High,
        timeInterval: 5000,
        distanceInterval: 0.1,
        foregroundService: {
          notificationTitle: 'ä½ç½®æƒ…å ±ã‚’å–å¾—ä¸­',
          notificationBody: 'ã‚¢ãƒ—ãƒªã¯ä½ç½®æƒ…å ±ã‚’ãƒãƒƒã‚¯ã‚°ãƒ©ã‚¦ãƒ³ãƒ‰ã§å–å¾—ã—ã¦ã„ã¾ã™',
        },
      });

      console.log('ãƒãƒƒã‚¯ã‚°ãƒ©ã‚¦ãƒ³ãƒ‰ä½ç½®æƒ…å ±å–å¾—ã‚’é–‹å§‹ã—ã¾ã—ãŸ');
    } else {
      const isRegistered = await TaskManager.isTaskRegisteredAsync(LOCATION_TASK_NAME);
      if (isRegistered) {
        await Location.stopLocationUpdatesAsync(LOCATION_TASK_NAME);
        console.log('ãƒãƒƒã‚¯ã‚°ãƒ©ã‚¦ãƒ³ãƒ‰ä½ç½®æƒ…å ±å–å¾—ã‚’åœæ­¢ã—ã¾ã—ãŸ');
      }
    }
  };

  return (
    <View>
      <View style={styles.button}>
        <TouchableOpacity onPress={handleLocate}>
          <View>
            {isLocating ? (
              <Icon name="stop" color="#D34F45" size={250} />
            ) : (
              <Icon name="play" color="#467FD3" size={250} />
            )}
          </View>
        </TouchableOpacity>
      </View>

      <View>
        {errorMsg ? (
          <Text style={styles.errorText}>{errorMsg}</Text>
        ) : isLocating && location ? (
          <Text>
            ç·¯åº¦ï¼š{location.latitude ?? 'å–å¾—ä¸­...'} {'\n'}
            çµŒåº¦ï¼š{location.longitude ?? 'å–å¾—ä¸­...'} {'\n'}
            ä½æ‰€ï¼š{location.address || 'å–å¾—ä¸­...'} {'\n'}
            ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹ï¼š{location.status || 'å–å¾—ä¸­...'} {'\n'}
            å®Ÿè¡Œå¾ŒçµŒéæ™‚é–“ï¼š{exeTime} {'\n'}
            å®Ÿè¡Œå¾Œå–å¾—å›æ•°ï¼š{count || 'å–å¾—ä¸­...'} {'\n'}
            é–“éš”ï¼š{location.elapsedTime || 'å–å¾—ä¸­...'} {'\n'}
            æœ€çµ‚ä½ç½®æƒ…å ±å–å¾—ï¼š{new Date().toLocaleTimeString()}
          </Text>
        ) : (
          <Text>ä½ç½®æƒ…å ±åœæ­¢ä¸­</Text>
        )}
      </View>
    </View>
  );
};

const styles = StyleSheet.create({
  button: {
    alignItems: 'center',
    justifyContent: 'center',
    shadowColor: '#000',
    shadowOpacity: 0.2,
    shadowRadius: 4,
    shadowOffset: { width: 0, height: 8 },
    elevation: 8,
    margin: 16,
  },
  errorText: {
    color: 'red',
    fontSize: 16,
    margin: 10,
  },
});

export default Locate;
